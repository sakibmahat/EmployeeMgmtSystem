@model EmployeeManagement.Entities.GradeMaster


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GradeMaster</h4>
<hr />
<div class="row">
    <div class="col-md-4">
         <button type="button" class="btn btn-info">@Html.ActionLink("home","HomeEmployee","Home","AuthenticateMVC")</button>
        <button type="button" class="btn btn-info">@Html.ActionLink("Logout","Login","AuthenticateMVC")</button>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
